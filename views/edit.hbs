                    <div class="ms-Grid-col">
                        <div class="ms-TextField is-required">
                            <input class="ms-TextField-field is-required" name="answers" value="{{answer}}"></input>
                            <input type="hidden" name="answerId" value="{{RowKey}}" />
                        </div> 
                        <input name="totals" type="hidden" value="{{totals}}" />
                    </div>
                    <div class="ms-Grid-col">
                        <div class="ms-TextField is-required">
                            <input class="jscolor" value="{{color}}" name="colors">
