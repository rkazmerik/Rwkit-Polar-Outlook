<span class="ms-font-xxl">Edit Poll</span>
 
	<div id="EditPoll" class="ms-Grid">
	<div class="ms-Grid-row">
		<div class="ms-Grid-col">
		<form method="post">
            <input name="entityId" type="hidden" value="{{poll.body.value.0.RowKey}}" />
			<div class="ms-TextField is-required">
				<label class="ms-Label">Poll Title:</label>
				<input id="PollTitle" class="ms-TextField-field is-required" type="text" name="title" size="62" value="{{poll.body.value.0.title}}">
			</div>
	 
			<div class="ms-TextField is-required">
                <input name="questionId[]" type="hidden" value="{{questions.body.value.0.RowKey}}" />
				<label class="ms-Label">Question:</label>
                <textarea id="PollQuestion" class="ms-TextField-field is-required" name="questions[]">{{questions.body.value.0.question}}</textarea>
			</div>
	
    		<div class="ms-TextField is-required">
				<label class="ms-Label">Answers:</label>
			</div>
	
            <div id="Answers">
